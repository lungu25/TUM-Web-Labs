@model WebApplication.BusinessLogic.DbModels.Smartphone


@{
    ViewBag.Title = "SmartphoneForm";
}

@{
    var actionResult = Model.Id == 0 ? "Create" : "Edit";
}
<br/>
<br/>
<br/>

<div class="col-6 offset-3 my-3">
    <h2>@actionResult</h2>
    <hr />
    @using (Html.BeginForm("Save", "Data"))
    {
        <div class="form-group">
            @Html.LabelFor(m => m.Name)
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.PicturePath)
            @Html.TextBoxFor(m => m.PicturePath, new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Price)
            @Html.TextBoxFor(m => m.Price, new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.OperatingSystem)
            @Html.TextBoxFor(m => m.OperatingSystem, new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Camera)
            @Html.TextBoxFor(m => m.Camera, new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Display)
            @Html.TextBoxFor(m => m.Display, new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.CPU)
            @Html.TextBoxFor(m => m.CPU, new { @class = "form-control" })

            @Html.LabelFor(m => m.Memory)
            @Html.TextBoxFor(m => m.Memory, new { @class = "form-control" })

            @Html.LabelFor(m => m.Battery)
            @Html.TextBoxFor(m => m.Battery, new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Dimension)
            @Html.TextBoxFor(m => m.Dimension, new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Weight)
            @Html.TextBoxFor(m => m.Weight, new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Port)
            @Html.TextBoxFor(m => m.Port, new { @class = "form-control" })
        </div>

        @Html.HiddenFor(m => m.Id);
        <button type="submit" class="btn btn-success">Save</button>

    }


</div>