@model WebApplication.BusinessLogic.DbModels.Smartphone

@{
    ViewBag.Title = "Details";
}

<br />
<br/>
<br/>
<br/>

<!-- content container -->
<div class="container-fluid" id="content">

    <!-- Left-aligned media object -->
    <div class="media my-3">
        <div class="media-left mr-4">
            <img src="@Model.PicturePath.Replace("~", "" )" class="media-object mb-1" style="width: 300px; height: 400px">
        </div>
        <div class="media-body">
            <h4 class="media-heading">@Model.Name</h4>
            <p style="font-size: 1.2em; color:darkblue">
                Operating System: @Model.OperatingSystem
                <br />
                Camera: @Model.Camera
                <br />
                Display: @Model.Display
                <br />
                CPU: @Model.CPU
                <br />
                Memory: @Model.Memory
                <br />
                Battery: @Model.Battery
                <br />
                Dimension: @Model.Dimension
                <br />
                Weight: @Model.Weight g
                <br />
                Port: @Model.Port
                <br />
                <h4 style="color:limegreen">
                    Price: @Model.Price $
                </h4>
                <br />

            </p>
        </div>
    </div>
</div>

